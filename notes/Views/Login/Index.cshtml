@{
    ViewBag.Title = "Login";
}
<div id="body">
    <h2>Login</h2>
    <form action="Login/LogOn" method="post">
        <fieldset>
            <div>
                Log on using Google OpenId:
            <input name="loginIdentifier" value="https://www.google.com/accounts/o8/id" />
                <button type="submit">Login</button>
            </div>
        </fieldset>
    </form>
</div>
